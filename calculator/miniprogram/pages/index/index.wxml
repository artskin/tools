<view class="container">
  <view class="panel">
    <view class="panel_card">
      <view class="panel_head">
        <text>增收金额</text>
        <view class='income'>￥{{zengshou}}</view>
      </view>
      <view class="section">
        <view class="panel-item">
          <text class="panel__title">扣除前纳税额度</text>
          <view>{{oldRatalVal}}</view>
        </view>
        <view class="panel-item">
          <text class="panel__title">扣除后纳税额度</text>
          <view>{{newRatalVal}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="section">{{oldWage}} - {{newWage}}</view>
  <view class="section wage">
    <text class="section__title">您的月收入：</text>
    <view class="list-item">
      <input bindinput="bindKeyInput" type="digit" placeholder="请输入您的工资" placeholder-class="placeholder" />
    </view>
  </view>

  <view class="section list">
    <text class="section__title">常规扣除：</text>
    <view class="list-item">
      <text class="list__title">五险一金：</text>
      <input bindblur="deduction" type="digit" placeholder="请输入五险一金扣除额" placeholder-class="placeholder" />
    </view>
    <view class="list-item">
      <text class="list__title">税收起征额：</text>
      <input class='input-disabled' bindblur="deduction" type="digit" value="5000" disabled />
    </view>
  </view>

  <view class="section list">
    <text class="section__title">新增专项扣除：</text>
    <view class="list-item">
      <text class="list__title">子女教育：</text>
      <input bindblur="deduction" type="digit"  placeholder="每月1000元" placeholder-class="placeholder" />
    </view>
    <view class="list-item">
      <text class="list__title">继续教育：</text>
      <input bindblur="deduction" type="digit" placeholder="每月400元" placeholder-class="placeholder" />
    </view>
    
    <view class="list-item">
      <text class="list__title">住 / 租房：</text>
      <input bindblur="deduction" type="digit" placeholder="每月1200元" placeholder-class="placeholder" />
    </view>
    <view class="list-item">
      <text class="list__title">赡养老人：</text>
      <input bindblur="deduction" type="digit" placeholder="60岁以上，1000元" placeholder-class="placeholder" />
    </view>
    <view class="list-item">
      <text class="list__title">大病医疗：</text>
      <input bindblur="deduction" type="digit" placeholder="" placeholder-class="placeholder" />
    </view>
  </view>

  
  <view class="section gap10">
    <button class="col-10" type="primary" bindtap="primary"> 计算 </button>
  </view>
